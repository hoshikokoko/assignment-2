<h1>Books</h1>
<table class= "books-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan= "3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td>d</td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
<div class= "book-form">
  <div class= "form-box">
    <p>Title</p>
    <%= f.text_field :title %>
   </div>
  <div class= "form-box">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  <div class= "form-box"><%= f.submit 'Create Book' %></div>
</div>

<% end %>